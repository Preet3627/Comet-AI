# --- COMET ECOSYSTEM CONFIGURATION ---

# [1] GENERAL APP SETTINGS
NEXT_PUBLIC_APP_NAME="Comet"
NEXT_PUBLIC_APP_VERSION="0.9.5-beta"

# [2] FIREBASE CONFIGURATION (Required for Google Login & Auth)
# Get these from Firebase Console > Project Settings
NEXT_PUBLIC_FIREBASE_API_KEY="your_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project_id.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project_id.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID="your_measurement_id"

# [3] DATABASE CONFIGURATION (MySQL / Hostinger)
# Used for persistent history, bookmarks, and user metadata
MYSQL_HOST="localhost"
MYSQL_PORT=3306
MYSQL_DATABASE="comet_core"
MYSQL_USER="admin"
MYSQL_PASSWORD="your_secure_password"
MYSQL_URL="mysql://admin:password@localhost:3306/comet_core"

# [4] AI & INTELLIGENCE (Cloud Fallbacks)
# Note: Users can also provide their own keys in the /web settings
GEMINI_API_KEY="your_global_gemini_key"
OPENAI_API_KEY="your_global_openai_key"

# [5] DOWNLOAD LINKS (For Landing Page)
NEXT_PUBLIC_WINDOWS_DOWNLOAD_URL="https://your-domain.com/downloads/comet-setup.exe"
NEXT_PUBLIC_MACOS_DOWNLOAD_URL="#"
NEXT_PUBLIC_LINUX_DOWNLOAD_URL="#"
NEXT_PUBLIC_ANDROID_DOWNLOAD_URL="#"
NEXT_PUBLIC_IOS_DOWNLOAD_URL="#"


# [6] SECURITY
ADMIN_MASTER_KEY="admin123"
JWT_SECRET="generate_a_random_string_here"
